const fs = require('fs');
const shell = require('shelljs');

const server = Express();

server.post('/build', (req, res) => {
  const buildScript = fs.readFileSync('./build-script.sh').toString();
  shell.exec(buildScript)
  if (shell.exec(buildScript).code === 0) {
    res.send({ success: true });
  } else {
    res.status(500).send({ success: false, message: 'build failed :(' });
  }
});

server.use('/build/android', Express.static('~/great-scoutt/android/app/build/outputs/apk'));

server.listen(3000);
